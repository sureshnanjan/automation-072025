{
  "info": {
    "_postman_id": "22b9cbb6-b9a0-4f94-b93a-12e1f0a7a11d",
    "name": "Restful-Booker (Mock Fixed)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Ping",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{mockURL}}/ping",
          "host": ["{{mockURL}}"],
          "path": ["ping"]
        }
      },
      "response": []
    },
    {
      "name": "Create Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"username\": \"{{username}}\", \"password\": \"{{password}}\" }"
        },
        "url": {
          "raw": "{{mockURL}}/auth",
          "host": ["{{mockURL}}"],
          "path": ["auth"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "const data = pm.response.json();",
              "pm.environment.set(\"token\", data.token);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "All Booking Id's",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{mockURL}}/booking",
          "host": ["{{mockURL}}"],
          "path": ["booking"]
        }
      },
      "response": []
    },
    {
      "name": "Create Booking",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstname\" : \"Jim\",\n  \"lastname\" : \"Brown\",\n  \"totalprice\" : 111,\n  \"depositpaid\" : true,\n  \"bookingdates\" : {\n    \"checkin\" : \"2018-01-01\",\n    \"checkout\" : \"2019-01-01\"\n  },\n  \"additionalneeds\" : \"Breakfast\"\n}"
        },
        "url": {
          "raw": "{{mockURL}}/booking",
          "host": ["{{mockURL}}"],
          "path": ["booking"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "const data = pm.response.json();",
              "pm.environment.set(\"bookingId\", data.bookingid);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Update Booking",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Cookie", "value": "token={{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstname\" : \"James\",\n  \"lastname\" : \"Brown\",\n  \"totalprice\" : 111,\n  \"depositpaid\" : true,\n  \"bookingdates\" : {\n    \"checkin\" : \"2018-01-01\",\n    \"checkout\" : \"2019-01-01\"\n  },\n  \"additionalneeds\" : \"Breakfast\"\n}"
        },
        "url": {
          "raw": "{{mockURL}}/booking/{{bookingId}}",
          "host": ["{{mockURL}}"],
          "path": ["booking", "{{bookingId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "const data = pm.response.json();",
              "pm.environment.set(\"bookingFirstname\", data.firstname);",
              "pm.environment.set(\"bookingLastname\", data.lastname);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
